---
import "@fontsource/great-vibes";
---

<div class="heroContainer">
  <h1>Pichon Tattoo</h1>
  <p>tatuajes Artisticos</p>
</div>
<style>
  @font-face {
    font-family: "Streetwear";
    src: url("/fonts/Streetwear.otf") format("otf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  .heroContainer {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-image: url("/img/tattoo-bg.webp");
    background-size: cover;
    z-index: -1;
    filter: contrast(75%);
  }
  h1 {
    color: yellow;
    font-family: "Great Vibes";
    font-size: 8rem;
    font-weight: 300;
    text-shadow: 4px 4px #202020a6;
  }
  p {
    color: yellow;
  }

  @media (max-width: 768px) {
    .heroContainer {
      background-image: url("/img/mobile-bg.webp");
      text-align: center;
    }
  }
</style>
