---
import "@fontsource/great-vibes";
---

<div class="heroContainer">
  <h1 class="text-gradient">Pichon Tattoo</h1>
</div>
<style>
  @font-face {
    font-family: "Inter";
    src: url("/fonts/inter.ttf") format("ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  .heroContainer {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-image: url("/img/tattoo-bg.webp");
    background-size: cover;
    filter: contrast(80%);
    z-index: -1;
    filter: contrast(75%);
  }
  h1 {
    font-family: "Inter";
    font-size: 100px;
    letter-spacing: -5px;
    font-weight: 800;
    line-height: 100px;
    text-transform: uppercase;
  }

  .text-gradient {
    background: #f4ff00;
    background: linear-gradient(to right, #f4ff00 0%, #a51910 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  @media (max-width: 768px) {
    .heroContainer {
      background-image: url("/img/mobile-bg.webp");
      text-align: center;
    }
  }
</style>
